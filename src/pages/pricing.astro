---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Services based on your needs"
    subtitle="Choose the perfect plan that aligns with your goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Only pay for what you need"
    prices={[
      {
        title: 'monthly',
        subtitle: 'Getting to know us',
        price: 3000,
        period: 'per month',
        items: [
          {
            description: 'Billed monthly',
          },
          {
            description: 'Provides 60 billiable hours per month',
          },
          {
            description: 'Great for trial runs to test our synergy',
          },
          {
            description: 'Provides Engineering, Analytics and Data Science shared services',
          },
          {
            description: 'Great for one off projects',
          },
        ],
      },
      {
        title: 'yearly',
        subtitle: 'Partnerships',
        price: 2850,
        period: 'Per Month',
        items: [
          {
            description: 'Billed at the start of the year',
          },
          {
            description: 'You love our work! Make us your partners',
          },
          {
            description: 'Everything else in Monthly and Quarterly',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Custom',
        subtitle: 'Enterprise',
        price: '3000+',
        period: 'Reach out to us',
        items: [
          {
            description: 'Speak to our consultants for a tailored solution for your organisational needs',
          },
        ],
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <!Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Tiered Pricing Plans',
        description: 'Choose from a range of pricing plans designed to accommodate different budgets and requirements.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each plan, with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Secure payment gateways to protect your financial information during transactions.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Instant Access',
        description: `Immediate access to your chosen plan's features and templates upon subscription.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Upgrade Value',
        description: 'Upgrade to higher-tier plans to unlock more features and benefits for an enhanced experience.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24H support',
        description: 'Questions answered via live chat, email or phone, every calendar day.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <!Steps
    title="A guided journey from plans to creativity"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Explore plans',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select a plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Sign Up / Log In',
        icon: 'tabler:number-3',
      },
      {
        title: 'Review order',
        icon: 'tabler:number-4',
      },
      {
        title: 'Enter payment details',
        icon: 'tabler:number-5',
      },
      {
        title: 'Confirmation',
        icon: 'tabler:number-6',
      },
      {
        title: 'Download and start using the template(s)',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right plan is important, and we're here to answer your questions. If you have queries about our pricing options, you're in the right place."
    columns={1}
    items={[
      {
        title: 'Do the plans come with customer support?',
        description:
          'Absolutely, all plans include access to a dedicated success manager and a ticketing helpdesk to optimise requests.',
      },
      {
        title: 'Is there a trial period for the different plans?',
        description:
          "Unfortunately, we would have to suggest going for the Monthly billing option to test us out.",
      },
      {
        title: 'Can I switch between plans?',
        description:
          'Certainly! Let us know ahead of the billing cycle and we will manage expectations for the next cycle ahead.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept direct transfers, major credit cards and online payment methods to ensure a convenient and secure transaction process.',
      },
      {
        title: 'Are there any hidden fees beyond the displayed cost?',
        description:
          'No, the subscription cost covers all the services listed above aside from the necessary SST. There are no hidden fees or extra charges.',
      },
      {
        title: 'What about infrastructure costs, ie, billings from AWS, GCP or third party tools like Braze, Mixpanel, Amplitude and so forth?',
        description:
          'We do not cover such costs as infrastructure and tools will be owned by the you, the customer.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready for your journey?"
    subtitle="Join our community of satisfied customers who have transformed their businesses with us."
    actions={[
      {
        variant: 'primary',
        text: 'Get started now',
        href: '/contact',
      },
    ]}
  />
</Layout>
